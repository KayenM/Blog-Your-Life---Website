<%- include("partials/header") -%>

<h1>Home</h1>

<p> <%=startingContent%> </p>


<% postsArray.forEach(function(post) { %>     <%# for looping through the array. Also, the postTitle element is a made up placeholder name (usually singular form of array) %>

  <h1> <%=post.title%> </h1>
  <p> <%=post.content.substring(0,100) + "..." %>  <%# The substring method truncates the string to show only up to 100 chars %>
  <a href="/posts/ + <%=post.title%>" >Read More</a>    <%# if they press read more it takes them to localhost:3000/posts/{postTitle} which we have a dynamic app.get made that will take them to the post %>   
  </p>


<% }); %>

<%- include("partials/footer") -%>
